version: 0.0
os: linux
files:
  - source: /
    destination: /home/ec2-user/app

hooks:
  BeforeInstall:
    - location: scripts/install_docker.sh
      timeout: 300
      runas: root

  AfterInstall:
    - location: scripts/pull_docker_images.sh
      timeout: 300
      runas: root

  ApplicationStart:
    - location: scripts/start_containers.sh
      timeout: 300
      runas: root

  ApplicationStop:
    - location: scripts/stop_containers.sh
      timeout: 300
      runas: root
